{
  "manifest_version": 3,
  "name": "TabFocus",
  "version": "1.0.0",
  "description": "Manage browser tabs efficiently with the ability to view one group at a time",
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "TabFocus",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "permissions": [
    "tabs",
    "tabGroups",
    "storage",
    "alarms",
    "contextMenus"
  ],
  "host_permissions": [
    "https://www.google.com/s2/favicons/*"
  ],
  "options_page": "options/options.html",
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Open TabFocus popup"
    },
    "show-all-groups": {
      "suggested_key": {
        "default": "Ctrl+Shift+U",
        "mac": "Command+Shift+U"
      },
      "description": "Show all groups"
    }
  }
}
